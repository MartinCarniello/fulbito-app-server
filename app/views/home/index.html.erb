<div class="jumbotron horizontal-center">
	<h2 class="text-center">Login</h2>
	<hr>

	<%= form_for @user, :url => { :action => "login" }, html: {class: "form-horizontal"}  do |f|  %>
	  <div class="form-group">
	  	<%= f.label :username, class: "control-label col-sm-2" %>
	  	<div class="col-sm-8">
	  		<%= f.text_field  :username, class: "form-control", placeholder: "EJ: Diegote91" %>
	  	</div>
	  </div>

	  <div class="form-group">
	  	<%= f.label :password, class: "control-label col-sm-2" %>
	  	<div class="col-sm-8">
	  		<%= f.password_field  :password, class: "form-control", placeholder: "EJ: *******" %>
	  	</div>
	  </div>

	  <div class="text-center">
	  	<%= f.submit "Login", class: "btn btn-primary btn-lg btn-success" %>
	  	<%= link_to 'Registrar', { controller: "register", action: "index" }, method: :get, class: "btn btn-primary btn-lg btn-info" %>
	  </div>
	<%end%>
</div>